<h1>Search for documents</h1>

<p> <%= params %> </p>
Documents in database: <%= @count %>

<%= form_tag("/search", method: "get") do %>
	<p>
	  <%= label_tag(:q, "Search for:") %>
	  <%= text_field_tag(:q, (params[:q] ? params[:q] : "")) %>
	  <%= submit_tag("Search") %>
	</p>
	<p>
		Category:
		<% @search_categories.each do |category| %>
			<%= radio_button_tag('category', category, (params[:category] == category ? true : false)) %>
			<%= category %>
		<% end %>
	</p>
<% end %>

<%= form_tag("/search", method: "get") do %>
	<%= submit_tag("List All") %>
<% end %>

<br>
<p>
	<% if params[:q] == "" %>
		<font color='red'>
			<b><%= "Please enter a search term." %></b>
		</font>
	<% elsif params[:q] and params[:category].nil? %>
		<font color='red'>
			<b><%= "Please select a search category." %></b>
		</font>
	<% elsif params[:q] and (@documents.nil? or @documents.count == 0)%>
		<b><%= "No documents found." %></b>
	<% elsif @documents %>
		<b><%= @documents.count.to_s + " document(s) found." %></b>

		<h2>Results:</h2>

		<table id="documents">
		  <thead>
		    <tr>
		      <th> Title </th>
		      <th> Description </th>
		      <th> Publication Date </th>
		      <th> Tags </th>
		    <tr>
		  </thead>
		  <tbody>
		    <% @documents.each do |document| %>
		      <tr>
		        <td> <%= document.title %> </td>
		        <td> <%= document.description %> </td>
		        <td> <%= document.publication_date %> </td>
		        <td> <%= document.tags %> </td>
		        <td> <%= button_tag("Add to coursepack") %> </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<% end %>
</p>
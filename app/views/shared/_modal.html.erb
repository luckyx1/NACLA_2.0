<div  id="show_article">
<!--<div id='show_article'> <!--data-modal-overflow="true">  -->
  <div id="modal_container">
    <div id='modal_title'>
          <h2>
          {{modal.title}}
           </h2>
    </div>
    <div id='thumbnail_container'>
      <img ng-src="{{modal.thumbnail_link}}">
    </div>

    <div id='modal_content'>

    <div>
      <h3> Description </h3>
      <p> {{modal.description}} </p>
    </div>

  <div>
    <div class='course_pack_headers form_headers'> Tags:</div> {{modal.tags}}
    <div class='course_pack_headers form_headers'> Volume:</div> {{modal.volume}}
    <div class='course_pack_headers form_headers'>Issue:</div> {{modal.issue}}
    <div class='course_pack_headers form_headers'>Published:</div> {{dateFormatting(modal.publication_date)}}
  </div>
  </div>
  </div>
  <% if @user %>
      <button type='button' ng-click='download(modal)' id='download_button'>Download</button>
    <%#= button_to "Download", {:action => "/articles/{{modal.id}}/download"},{:id=>'download_button'} %>
  <% end %>
  <button type='button' ng-click='close_modal()' id='modal_close'>Close Article Viewer</button>

</div> <!-- Modal -->
